<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.technologystackapp.activities.custom.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_foot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.activity.function.ActivitySlideTab">


    <FrameLayout
        android:id="@+id/analyst_tabs_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/analyst_head"
        tools:background="#ffffff">

        <android.support.design.widget.TabLayout
            android:id="@+id/analyst_tabs"
            style="@style/AnalystTabLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp" />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/analyst_pages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/analyst_tabs_bg"
        android:background="#f5f5f5" />

</com.example.administrator.technologystackapp.activities.custom.MyLinearLayout>